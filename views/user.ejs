<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WVMX86M3" height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <h1><%= user.username %>'s Links</h1>

    <!-- Form to add new link -->
    <h2>Add a New Link</h2>
    <form action="/user/<%= user.username %>/add-link" method="POST">
        <input type="text" name="linkName" placeholder="Link Name" required>
        <input type="url" name="url" placeholder="URL" required>
        <button type="submit">Add Link</button>
    </form>

    <!-- Display existing links -->
    <h2>Existing Links</h2>
    <ul>
        <% user.links.forEach(link => { %>
            <li>
                <a href="<%= link.url %>" target="_blank"><%= link.linkName %></a>
            </li>
        <% }) %>
    </ul>

    <h2>Add New Link</h2>
    <form action="/<%= user.username %>/add-link" method="POST">
        <input type="text" name="linkName" placeholder="Link Name" required>
        <input type="url" name="url" placeholder="URL" required>
        <button type="submit">Add Link</button>
    </form>

    <script>
        function trackLink(linkName) {
            dataLayer.push({
                'event': 'linkClick',
                'linkName': linkName,
                'user': '<%= user.username %>'
            });
        }
    </script>
</body>
</html>
